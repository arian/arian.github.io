<article class="<%= item.layout %>">
  <header>
    <%- partial('post/title') %>
    <% if (item.layout != 'page'){ %>
      <time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></time>
    <% } %>
  </header>
  <div class="entry">
    <% if (item.excerpt && index){ %>
      <%- item.excerpt %>
    <% } else { %>
      <%- item.content %>
    <% } %>
  </div>
  <footer>
    <% if (index){ %>
      <% if (item.excerpt){ %>
        <div class="alignleft">
          <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
        </div>
      <% } %>
      <% if (item.comments != "no" && config.disqus){ %>
      <div class="alignright">
        <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
      </div>
      <% } %>
    <% } else { %>
      <%- partial('post/category') %>
      <%- partial('post/tag') %>
    <% } %>
    <div class="clearfix"></div>
  </footer>
  <% if (!index){ %>
    <%- partial('comment') %>
  <% } %>
</article>

